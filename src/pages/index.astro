---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const BASE_TAG_URL = 'https://blog.kevincoyle.xyz/blog/tags/';
const builtWith = [
  { name: 'Machine Learning', url: `${BASE_TAG_URL}machine%20learning` },
  { name: 'Basketball', url: `${BASE_TAG_URL}basketball` },
  { name: 'Music', url: `${BASE_TAG_URL}music` },
  { name: 'Sports Analytics', url: `${BASE_TAG_URL}sports%20analytics` },
  { name: 'The Data Field', url: `${BASE_TAG_URL}data%20field` },
  { name: 'Family', url: `${BASE_TAG_URL}family` },
  { name: 'SaaS', url: `${BASE_TAG_URL}saas` },
  { name: 'Full-Stack Development', url: `${BASE_TAG_URL}full%20stack%20development` },
];
---

<Layout
  title='Home'
  pageTitle='Kevin Coyle | Home'
  description='Kevin Coyle is a machine learning engineer and guy that makes things.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Kevin</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              A blog for <a
                class='text-white'
                target='_blank'
                href='https://kevincoyle.xyz'>Kevin</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Minimalistic, neobrutalist, and built with some hipster tech, because ðŸ¤Œthat just makes sense.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Kevin writes about
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Who is this site for?
          </h2>
          <p class='poppins'>
           People who want to read things at an intersection of sports, machine learning, music, the film industry, and entrepreneurship. Or people who were at <a
              href='https://www.kevincoyle.xyz'>my site</a
            > and want to know what I'm up to.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
